{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@utils/*": ["./src/utils/*"],
      "@enums/*": ["./src/enums/*"],
      "@typings/*": ["./src/typings/*"],
      "@logger": ["./src/logger/index"]
    },
    "forceConsistentCasingInFileNames": true
  }
}
